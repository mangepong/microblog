version: "3"
services:
    mysql:
        image: mysql/mysql-server:5.7
        container_name: "dbserver"
        environment:
            - MYSQL_DATABASE=microblog
            - MYSQL_USER=microblog
            - MYSQL_PASSWORD=password
            - MYSQL_ROOT_PASSWORD=password
        volumes:
            - ./mysql-data:/var/lib/mysql
        ports:
            - 3306:3306
        restart: "always"
